{
  "name": "mercadopago/magento2-plugin",
  "description": "Mercado Pago Magento 2 Plugin",
  "authors": [
    {
      "name": "Mercado Pago",
      "email": "info@mercadopago.com"
    }
  ],
  "type": "magento2-component",
  "version": "1.0.0",
  "license": [
    "OSL-3.0",
    "AFL-3.0"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.magento.com/"
    }
  ],
  "require": {
    "composer/composer": "@alpha"
  },
  "require-dev": {
    "magento/product-community-edition": "2.*",
    "phpunit/phpunit": "4.1.0",
    "squizlabs/php_codesniffer": "1.5.3",
    "phpmd/phpmd": "@stable",
    "pdepend/pdepend": "2.2.2",
    "sjparkinson/static-review": "~4.1",
    "fabpot/php-cs-fixer": "~1.2",
    "lusitanian/oauth": "~0.3 <=0.7.0",
    "magento/magento-composer-installer": "*"
  },
  "config": {
    "use-include-path": true
  },
  "autoload": {
    "psr-4": {
      "MercadoPago\\Core\\": "app/code/MercadoPago/Core",
      "MercadoPago\\MercadoEnvios\\": "app/code/MercadoPago/MercadoEnvios"
    },
    "files": [
      "app/code/MercadoPago/Core/registration.php",
      "app/code/MercadoPago/MercadoEnvios/registration.php"
    ]
  }
}
